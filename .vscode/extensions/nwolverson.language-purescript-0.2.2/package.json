{
	"name": "language-purescript",
	"displayName": "PureScript Language Support",
	"description": "Syntax Highlighting for the PureScript programming language",
	"version": "0.2.2",
	"publisher": "nwolverson",
	"engines": {
		"vscode": "^1.5.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/nwolverson/vscode-language-purescript"
	},
	"bugs": {
		"url": "https://github.com/nwolverson/vscode-language-purescript/issues"
	},
	"icon": "images/ps_avatar.png",
	"categories": [
		"Languages"
	],
	"main": "./out/src/extension",
	"activationEvents": [
		"*"
	],
	"contributes": {
		"languages": [
			{
				"id": "purescript",
				"aliases": [
					"PureScript",
					"purescript"
				],
				"extensions": [
					".purs"
				]
			}
		],
		"grammars": [
			{
				"language": "purescript",
				"scopeName": "source.purescript",
				"path": "./syntaxes/purescript.json"
			},
			{
				"scopeName": "markdown.purescript.codeblock",
				"path": "./syntaxes/codeblock-purescript.json",
				"injectTo": [
					"text.html.markdown"
				],
				"embeddedLanguages": {
					"meta.embedded.block.purescript": "purescript"
				}
			}
		],
		"snippets": [
			{
				"language": "purescript",
				"path": "./snippets/purescript.json"
			}
		]
	},
	"devDependencies": {
		"cson": "^3.0.2",
		"request": "^2.67.0",
		"typescript": "^2.0.3",
		"vscode": "^1.0.0",
		"@types/node": "^6.0.40"
	},
	"scripts": {
		"build": "node scripts/update-grammar.js && node scripts/update-snippets.js",
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "node ./node_modules/vscode/bin/test"
	},
	"__metadata": {
		"id": "b9d2dfd7-af7e-4d90-a696-db33ef5e77ee",
		"publisherId": "f3ad0d60-2506-473d-b11d-ac939eab7eb8",
		"publisherDisplayName": "Nicholas Wolverson"
	}
}